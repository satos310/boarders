<!-- ユーザー一覧 admin/users/index -->

<div class="col-md-8">
  <h5 class="mb-4">admin / ユーザー一覧</h5>
</div>

<!-- ユーザー一覧 -->
<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
      <div class="d-flex mb-1">
        <div>
          <%= link_to admin_user_path(user.id), class: 'text-dark' do %>
            <%= image_tag user.get_user_image(70,70) %>
          <% end %>
        </div>

        <div>
          <p><%= link_to "#{user.name}", admin_user_path(user.id), class: 'text-dark' %></p>
          <p><%= link_to "#{user.introduction}".truncate(25, omission: '...'), admin_user_path(user.id), class: 'text-dark' %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>