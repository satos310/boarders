<!DOCTYPE html>
<html>
  <head>
    <title>Boarders</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">

          <!-- /admin ログイン時のheader -->
          <% if admin_signed_in? %>
            <%= link_to "FourBoarders", admin_homes_top_path, class: 'navbar-brand font-weight-bold' %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDrop wn" aria-controls="navbarNavDrop wn" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse", id="navbarNavDrop wn">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "ホーム", admin_homes_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "レビュー検索", admin_reviews_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ユーザー一覧", admin_users_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark border' %>
                </li>
              </ul>
            </div>

          <!-- /user ログイン時のheader -->
          <% elsif user_signed_in? %>
            <%= link_to "FourBoarders", homes_top_path, class: 'navbar-brand font-weight-bold' %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDrop wn" aria-controls="navbarNavDrop wn" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse", id="navbarNavDrop wn">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "ホーム", homes_top_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "トピックを検索", reviews_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "通知", notifications_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "Pick Up", pickups_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "プロフィール", user_path(current_user.id), class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿する", new_review_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark border' %>
                </li>
              </ul>
            </div>

          <!-- /admin,/public共通 ログアウト時のheader -->
          <% else %>
            <%= link_to "FourBoarders", admin_homes_top_path, class: 'navbar-brand font-weight-bold' %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDrop wn" aria-controls="navbarNavDrop wn" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse", id="navbarNavDrop wn">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to "トピックを検索", reviews_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark border mr-3' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark border mr-3' %>
                </li>
              </ul>
            </div>
          <% end %>

        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

  </body>
</html>
