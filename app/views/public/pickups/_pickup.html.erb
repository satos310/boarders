<!-- Pickup review用テンプレート -->

<% if !user_signed_in? %>
  <i class="fa fa-heart pickup-btn"></i>
  <%= review.pickups.length %>
<% elsif current_user.pickuped_by?(review.id) %>
  <%= link_to review_pickup_path(review.id, review.pickups), class: "pickup-link", method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
  <%= review.pickups.length %>
<% else %>
  <%= link_to review_pickups_path(review), class: "pickup-link", method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
  <%= review.pickups.length %>
<% end %>
