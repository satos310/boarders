<!-- コメント一覧の部分テンプレート -->
<% if review.comments.present? %>
  <p>コメント件数：<%= review.comments.count %></p>
  <% review.comments.each do |comment| %>
    <div class="col">
      <div class="d-flex">
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <%= image_tag comment.user.get_user_image(30,30) %>
        <%= comment.user.name %>
        <% if comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to review_comment_path(comment.review, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= comment.comment %>
    </div><!-- /col -->
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>