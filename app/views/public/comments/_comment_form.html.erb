<!-- コメント投稿フォームの部分テンプレート -->
<%= form_with  model:[review, comment], local: false do |f| %>
  <!--エラーメッセージ-->
  <div id="comments-error">
    <%= render 'layouts/error_messages', model: f.object %>
  </div>

  <div class="d-flex">
    <%= f.text_area :comment, placeholder: "コメントを追加", class: 'form-control form-control-sm mr-1', style: 'width:75%',rows:'1' %>
    <%= f.submit "投稿する", class: 'btn btn-light btn-outline-none text-secondary' %>
  </div>
<% end %>
