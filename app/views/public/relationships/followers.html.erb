<!-- フォロワー一覧 user/followers -->

<div class="container">
  <div class="row">
    <div>
      <h4><%= @user.name %>のフォロワー</h4>
      <p><%= link_to "フォロー中一覧", user_followings_path(@user.id), class: '' %></p>
    </div>
  </div>

  <div class="row">
    <div>
      <% @users.each do |user| %>
        <div class="d-flex">
          <div>
            <%= link_to user_path(@user.id), class: 'text-dark' do %>
              <%= image_tag user.get_user_image(100,100) %>
            <% end %>
          </div>
          <div>
            <%= link_to user_path(@user.id), class: 'text-dark' do %>
              <p><%= user.name %></p>
              <p><%= user.introduction %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>