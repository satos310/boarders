<!-- フォロー中一覧 user/followings -->

<div class="container">
  <div class="row">
    <div>
      <%= link_to "戻る", :back %>
      <h4><%= @user.name %>のフォロー中</h4>
      <p><%= link_to "フォロワー一覧", user_followers_path(@user.id), class: '' %></p>
    </div>
  </div>

  <div class="row">
    <div>
      <% @users.each do |user| %>
        <div class="d-flex">
          <div>
            <%= link_to user_path(user.id), class: 'text-dark' do %>
              <%= image_tag user.get_user_image(100,100) %>
            <% end %>
          </div>
          <div>
            <p><%= link_to "#{user.name}", user_path(user.id), class: 'text-dark' %></p>
            <p><%= link_to "#{user.introduction}", user_path(user.id), class: 'text-dark' %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
