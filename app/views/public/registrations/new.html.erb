<!-- registration/new ユーザー新規登録ページ -->

<div class="text-center">
  <h2 class="mb-4">Four Boarders</h2><br>
  <p>ボードスポーツが好きな方に</p>
  <p>これからもっとボードスポーツを好きになる方に</p>
  <p>登録してみんなの「イケてる」を見つけよう</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field mt-4 mb-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム" %>
    </div>

    <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="field mb-2">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
    </div>

    <div class="field mb-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "登録する" %>
    </div>
  <% end %><!-- /form_with -->

  <p>
    アカウントをお持ちですか？
    <%= link_to "ログインする", new_user_session_path %>
  </p>
</div>
