<!-- public/review/new レビュー投稿ページ -->

<div class="container">
  <div class="row">
    <div>
      <%= form_with model: @review, url: reviews_path, method: :post do |f| %>
        <table>
          <tr>
            <th>レビュー種別</th>
            <td>
              <%= f.radio_button :review_type, true %>
              <%= f.label :review_type_true, "ロケーション" %>
              <%= f.radio_button :review_type, false %>
              <%= f.label :review_type_false, "アイテム" %>
            </td>
          </tr>

          <tr>
            <th>写真を追加（プレビュー表示させたい）</th>
            <!-- multiple: trueで画像の複数投稿を許可している -->
            <td><%= f.file_field :item_image, accept: "image/*", multiple: true, class: "form-control-file user-image" %></td>
          </tr>

          <tr>
            <th>タイトル</th>
            <td><%= f.text_field :title, autofocus: true, class: 'form-control title' %></td>
          </tr>

          <tr>
            <th>レビュー</th>
            <td><%= f.text_area :body, class: 'form-control body' %></td>
          </tr>

          <tr>
            <th>評価</th>
            <td>
              ゲレンデ<div id="post_raty"></div>
              <script>
                var elem = document.getElementById('post_raty');
                var opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    scoreName: 'star[star]',
                  };
                  raty(elem,opt);
              </script>

              コストパフォーマンス<div id="post_raty2"></div>
              <script>
                var elem = document.getElementById('post_raty2');
                var opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    scoreName: 'star[star2]',
                  };
                  raty(elem,opt);
              </script>

              接客・サービス<div id="post_raty3"></div>
              <script>
                var elem = document.getElementById('post_raty3');
                var opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    scoreName: 'star[star3]',
                  };
                  raty(elem,opt);
              </script>

              設備の充実<div id="post_raty4"></div>
              <script>
                var elem = document.getElementById('post_raty4');
                var opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    scoreName: 'star[star4]',
                  };
                  raty(elem,opt);
              </script>

              周辺設備<div id="post_raty5"></div>
              <script>
                var elem = document.getElementById('post_raty5');
                var opt = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    half: true,
                    scoreName: 'star[star5]',
                  };
                  raty(elem,opt);
              </script>
            </td>
          </tr>
        </table>

        <div>
          <%= link_to "戻る", :back, class: 'btn' %>
          <%= f.submit "投稿する", class: 'btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>