<div class="container">
  <div class="row">
    <dvi>
      <%= form_with model: @review, url: review_path(@review.current_user.id), method: :patch do |f| %>
        <% @post_tags.each do |tag| %>
          <%= tag.name %><% ="(#{tag.reviews.count})" %>
        <% end %>

        <div class="field">
          <%= f.label "タグ (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :name, value: @hashtag_list, class:"form-control" %>
        </div>

      　<div class="actions" style="margin:20px 0;">
          <%= f.submit "投稿", class:"btn btn-outline-primary btn-block" %>
        </div>
      <% end %>
    </dvi>
  </div>
</div>